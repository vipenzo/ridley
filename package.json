{
  "name": "ridley",
  "version": "0.1.0",
  "description": "3D modeling with turtle graphics",
  "private": true,
  "scripts": {
    "dev": "shadow-cljs watch app",
    "release": "shadow-cljs release app",
    "clean": "rm -rf public/js docs/js",
    "build:gh-pages": "npm run copy-static && shadow-cljs release release",
    "copy-static": "rm -rf docs && mkdir -p docs && cp -r public/css public/scripts public/index.html docs/ && touch docs/.nojekyll"
  },
  "devDependencies": {
    "shadow-cljs": "^2.28.5"
  },
  "dependencies": {
    "@codemirror/theme-one-dark": "^6.1.2",
    "@nextjournal/clojure-mode": "^0.3.3",
    "codemirror": "^6.0.1",
    "manifold-3d": "^3.0.0",
    "opentype.js": "^1.3.4",
    "three": "^0.160.0"
  }
}
